%body
    %h2
    %em= @post.post_title
    
    %ul#details
    %li
        Author: #{@post.username}
    %li
        Last updated on: #{@post.updated_at}
        
    %h3 Description:
    %p#description
        = @post.post_description

= link_to 'Edit posts', edit_post_path(:id => @post.id), :method => "get"
= link_to_if @post.username == session['username'], 'Delete posts', delete_post_path(:id => @post.id), :method => "delete"

%div
    -if notice != nil
        %p{class: "popup"}= notice