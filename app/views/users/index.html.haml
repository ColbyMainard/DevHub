%body
    %h1 All Users

%table#users.table.table-striped.col-md-12
    %thead
        %tr
            %th Username
            %th Email
            %th Created time
            %th Updated time
            %th More Info

    %tbody
        - @users.each do |user|
            %tr
                %td 
                    = user.username
                %td
                    = user.email
                %td 
                    =user.created_at
                %td 
                    =user.updated_at
                %td 
                    =link_to "more info", show_user_path(:id=>user.id)
    
= link_to 'Add new user', new_user_path
= link_to 'Admin Portal', admin_user_path(session[:user_id]), :class => 'btn btn-primary'
%div
    -if notice != nil
        %p{class: "popup"}= notice